      },
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "Frontend",
      "script": "bin/www",
      "node_args": [
        "--harmony"
      ],
      "env": {
        "COMMON_ENV_VAR": "true",
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "scripts": {
