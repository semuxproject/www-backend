{
  "name": "semux.org-backend",
  "version": "1.0.0",
  "description": "Backend code for some functionality of semux.org",
  "main": "bin/www",
  "apps": [
    {
      "name": "Backend",
      "script": "backend.js",
      "node_args": [
        "--harmony"
      ],
      "args": [
        "semux_backend"
      ],
      "env": {
        "COMMON_ENV_VAR": "true",
