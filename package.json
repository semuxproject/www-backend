  ],
  "author": "Semux Developers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/semuxproject/www-backend/issues"
  },
  "homepage": "https://github.com/semuxproject/www-backend",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "pg": "^7.11.0",
    "pm2": "^3.5.1",
    "pug": "^3.0.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "sequelize": "^6.0.0"
